    <!-- Main Content -->
    <div class="container">
      <h2>Add Product</h2>
      <form id="addProductForm" onsubmit="form(this)" action="/admin/addProduct" method="post"
        enctype="multipart/form-data">
        <label for="productName">Product Name:</label>
        <input type="text" oninput="hello(this)" id="productName" name="productName" required>

        <label for="productCategory">Category:</label>
        <select name="productCategory" id="productCategory" oninput="hello(this)">
          <% Data.forEach((category)=>{ %>
            <option value="<%= category._id %>">
              <%= category.name%>
            </option>
            <% }) %>
        </select>

        <label for="productPrice">Price:</label>
        <input type="number" id="productPrice" name="productPrice" oninput="hello(this)" required>
        <div class="image-row">
          <div class="image-upload-container">
            <label for="productImage">Image 1:</label>
            <input type="file" id="productImage" onchange="hello(this)" name="image" accept="image/*" multiple required>
          </div>
        </div>


        <label for="productDescription">Product Description:</label>
        <input type="text" id="productDescription" oninput="hello(this)" name="productDescription" required>

        <label for="productQuantity">Quantity:</label>
        <input type="number" id="productQuantity" oninput="hello(this)" name="productQuantity" required>

        <label for="productSize">Size:</label>
        <input type="text" id="productSize" oninput="hello(this)" name="productSize" required>

        <div style="text-align: center;">
          <button type="submit" oninput="hello(this)" id="addProductBtn">Add Product</button>
          <button type="reset">Cancel</button>
        </div>
      </form>
    </div>

