    <script>
      function hello(e, i) {
        const inp = document.getElementById(`s${i}`);

        inp.value = Date.now() + '-' + e.files[0].name;

        console.log(inp);
      }
    </script>
    <script>
      function removeImage(index) {
        const imageContainer = document.getElementById(`productImage${index}`).closest('.image-upload-container');
        imageContainer.remove();
      }
    </script>
   
